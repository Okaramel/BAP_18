model Admin {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
}

model Mail {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  createdAt  DateTime  @default(now()) 
}

model Etiquette {
  id              Int       @id @default(autoincrement())
  slug            String    @unique
  image           String?
  video           String?
  title           String    @unique
  description     String?
  qrcode          String?
  statut          EtiquetteStatus @default(en_cours)
  tags            Tag[]     @relation("EtiquetteTags")
}

enum EtiquetteStatus {
  en_cours
  termine
}

model Creator {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  email           String    @unique
  linkedin        String?
  image           String?
}

model Tag {
  id             Int       @id @default(autoincrement())
  slug           String    @unique
  name           String    @unique
  description    String?
  etiquettes     Etiquette[] @relation("EtiquetteTags")
}

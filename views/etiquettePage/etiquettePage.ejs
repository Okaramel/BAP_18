<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/etiquettePage.css" />
        <title><%= etiquette.titleProject %></title>
    </head>
    <body>
        <main>
            <section class="top-banner">
                <nav class="navbar">
                    <a href="#" class="navbar_logo">
                        <img
                            src="/img/logo.png"
                            alt="logo"
                            class="navbar_logo-img"
                        />
                    </a>
                    <ul class="navbar_links">
                        <li><a href="" class="navbar_link">About</a></li>
                        <li><a href="" class="navbar_link">Programs</a></li>
                        <li><a href="" class="navbar_link">Research</a></li>
                        <li>
                            <a href="" class="navbar_link"
                                >Startup & Business</a
                            >
                        </li>
                        <li><a href="" class="navbar_link">FabLab</a></li>
                        <li><a href="" class="navbar_link">Contact</a></li>
                        <li><a href="" class="navbar_link">Museum</a></li>
                    </ul>
                </nav>
                <div
                    class="banner-container"
                    style="
                        background: url('/<%= etiquette.background %>')
                            no-repeat center center;
                    "
                >
                    <div class="title">
                        <img
                            src="/<%= etiquette.logo %>"
                            alt="logo-etiquette"
                        />
                        <h1><%= etiquette.titleProject %></h1>
                    </div>
                    <div class="middle">
                        <p class="description">
                            <%= etiquette.descriptionProject %>
                        </p>
                        <div class="tag">
                            <ul>
                                <% etiquette.etiquettesTags.forEach(tag => { %>
                                <li><%= tag.tag.name %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <div class="creator">
                        <ul>
                            <% if (etiquette.creators &&
                            etiquette.creators.length > 0) { %> <%
                            etiquette.creators.forEach(creator => { %>
                            <li>
                                <h1><%= creator.name %></h1>
                                <% if (creator.image) { %>
                                <img
                                    src="/<%= creator.image %>"
                                    alt="<%= creator.name %>"
                                />
                                <% } %>
                            </li>
                            <% }); %> <% } %>
                        </ul>
                    </div>
                </div>
            </section>
            <section class="main-container">
                <% if (etiquette.titleContainer1 &&
                etiquette.descriptionContainer1) { %>
                <div class="first-container">
                    <h1><%= etiquette.titleContainer1 %></h1>
                    <p><%= etiquette.descriptionContainer1 %></p>
                </div>
                <hr />
                <% } %> <% if (etiquette.titleContainer2 &&
                etiquette.descriptionContainer2) { %>
                <div class="second-container">
                    <div class="content">
                        <h1><%= etiquette.titleContainer2 %></h1>
                        <p><%= etiquette.descriptionContainer2 %></p>
                    </div>
                    <% if (etiquette.imageContainer2) { %>
                    <img
                        src="/<%= etiquette.imageContainer2 %>"
                        alt="Container 2"
                    />
                    <% } %>
                </div>
                <% } %> <% if (etiquette.titleContainer3 &&
                etiquette.descriptionContainer3) { %>
                <div class="third-container">
                    <div class="content">
                        <h1><%= etiquette.titleContainer3 %></h1>
                        <p><%= etiquette.descriptionContainer3 %></p>
                    </div>
                    <% if (etiquette.imageContainer3) { %>
                    <img
                        src="/<%= etiquette.imageContainer3 %>"
                        alt="Container 3"
                    />
                    <% } %>
                </div>
                <% } %> <% if (etiquette.quoteBanner) { %>
                <div class="quote-container">
                    <p><%= etiquette.quoteBanner %></p>
                    <% if (etiquette.bannerImage) { %>
                    <style>
                        .quote-container {
                            background-image: url("/<%= etiquette.bannerImage %>");
                        }
                    </style>
                    <% } %>
                </div>
                <% } %> <% if (etiquette.titleContainer4 &&
                etiquette.descriptionContainer4) { %>
                <div class="fourth-container">
                    <h1><%= etiquette.titleContainer4 %></h1>
                    <p><%= etiquette.descriptionContainer4 %></p>
                    <% if (etiquette.imageContainer4) { %>
                    <img
                        src="/<%= etiquette.imageContainer4 %>"
                        alt="Container 4"
                    />
                    <% } %>
                </div>
                <% } %>
            </section>
            <footer>
                <div class="left"></div>
            </footer>
        </main>
    </body>
</html>

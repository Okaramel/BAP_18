<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin</title>
        <link rel="stylesheet" href="/css/admin.css" />
    </head>
    <body>
        <div class="admin-container">
            <h1>Admin</h1>
            <div class="card-container">
                <div class="card">
                    <h2>ETIQUETTES <button class="add-btn">+</button></h2>
                    <div class="etiquette-card"></div>
                </div>
                <div class="card full-width">
                    <h2>MAIL</h2>
                    <div class="email-item">
                        <div class="details-btn">Email</div>
                        <button class="remove-btn">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                height="24px"
                                viewBox="0 -960 960 960"
                                width="24px"
                                fill="#e8eaed"
                            >
                                <path d="M200-440v-80h560v80H200Z" />
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="card">
                    <h2>
                        CREATEURS
                        <button class="add-btn" id="add-btn-creator">+</button>
                    </h2>
                    <div class="createur-card"></div>
                </div>
                <div class="card">
                    <h2>
                        TAG
                        <button class="add-btn" id="add-btn-tag">+</button>
                    </h2>
                    <div class="tag-card"></div>
                </div>
            </div>
        </div>

        <!--- ETIQUETTE FORM -->

        <div class="overlay-etiquette" style="display: none">
            <div class="popup-etiquette">
                <h2 id="popup-title">Ajouter une étiquette</h2>
                <form id="etiquette-form" enctype="multipart/form-data">
                    <div style="display: flex">
                        <div class="main-content">
                            <h3>Titre du projet*</h3>
                            <input
                                type="text"
                                id="titleProject"
                                name="titleProject"
                                placeholder="Titre du projet"
                                required
                            />
                            <h3>Logo</h3>
                            <input type="file" name="logo" id="logo" />
                            <img
                                id="logo-preview"
                                src="#"
                                alt="Prévisualisation du logo"
                                style="
                                    display: none;
                                    max-width: 100%;
                                    height: auto;
                                    margin-bottom: 10px;
                                "
                            />

                            <h3>Background header*</h3>
                            <input
                                type="file"
                                name="background"
                                id="background"
                                required
                            />
                            <img
                                id="background-preview"
                                src="#"
                                alt="Prévisualisation du background"
                                style="
                                    display: none;
                                    max-width: 100%;
                                    height: auto;
                                    margin-bottom: 10px;
                                "
                            />

                            <h3>Description header</h3>
                            <textarea
                                id="description"
                                name="descriptionProject"
                                placeholder="Description header"
                            ></textarea>
                            <h3>Titre top*</h3>
                            <input
                                type="text"
                                id="title1"
                                name="titleContainer1"
                                placeholder="Titre top"
                                required
                            />
                            <h3>Description top*</h3>
                            <textarea
                                id="description1"
                                name="descriptionContainer1"
                                placeholder="Description top"
                                required
                            ></textarea>
                            <h3>Titre container 1</h3>
                            <input
                                type="text"
                                id="title3"
                                name="titleContainer3"
                                placeholder="Titre container 1"
                            />
                            <h3>Description container 1</h3>
                            <textarea
                                id="description3"
                                name="descriptionContainer3"
                                placeholder="Description container 1"
                            ></textarea>
                            <h3>Image container 1</h3>
                            <input
                                type="file"
                                name="imageContainer3"
                                id="imageContainer1"
                            />
                            <img
                                id="imageContainer3-preview"
                                src="#"
                                alt="Prévisualisation de l'image container 3"
                                style="
                                    display: none;
                                    max-width: 100%;
                                    height: auto;
                                    margin-bottom: 10px;
                                "
                            />

                            <h3>Titre bottom</h3>
                            <input
                                type="text"
                                id="title4"
                                name="titleContainer4"
                                placeholder="Titre bottom"
                            />
                            <h3>Description bottom</h3>
                            <textarea
                                id="description4"
                                name="descriptionContainer4"
                                placeholder="Description bottom"
                            ></textarea>
                            <h3>Image bottom</h3>
                            <input
                                type="file"
                                name="imageContainer4"
                                id="imageContainer4"
                            />
                            <img
                                id="imageContainer4-preview"
                                src="#"
                                alt="Prévisualisation de l'image container 4"
                                style="
                                    display: none;
                                    max-width: 100%;
                                    height: auto;
                                    margin-bottom: 10px;
                                "
                            />
                        </div>
                        <div class="select-content">
                            <h3>Choix des créateurs*</h3>
                            <select id="creator_form" name="creator"></select>
                            <select id="creator_form2" name="creator2"></select>
                            <select id="creator_form3" name="creator3"></select>

                            <h3>Choix des tags</h3>
                            <select id="tag1" name="tag1"></select>
                            <select id="tag2" name="tag2"></select>
                            <select id="tag3" name="tag3"></select>

                            <h3>Choix de l'innovation*</h3>
                            <select id="innovation" name="innovation"></select>

                            <h3>Titre container 2</h3>
                            <input
                                type="text"
                                id="title2"
                                name="titleContainer2"
                                placeholder="Titre container 2"
                            />
                            <h3>Description container 2</h3>
                            <textarea
                                id="description2"
                                name="descriptionContainer2"
                                placeholder="Description container 2"
                            ></textarea>
                            <h3>Image container 2</h3>
                            <input
                                type="file"
                                name="imageContainer2"
                                id="imageContainer2"
                            />
                            <img
                                id="imageContainer2-preview"
                                src="#"
                                alt="Prévisualisation de l'image container 2"
                                style="
                                    display: none;
                                    max-width: 100%;
                                    height: auto;
                                    margin-bottom: 10px;
                                "
                            />

                            <h3>Quote</h3>
                            <input
                                type="text"
                                id="quoteBanner"
                                name="quoteBanner"
                                placeholder="Quote"
                            />

                            <h3>Image quote</h3>
                            <input
                                type="file"
                                name="bannerImage"
                                id="bannerImage"
                            />
                            <img
                                id="bannerImage-preview"
                                src="#"
                                alt="Prévisualisation de l'image quote"
                                style="
                                    display: none;
                                    max-width: 100%;
                                    height: auto;
                                    margin-bottom: 10px;
                                "
                            />
                        </div>
                    </div>

                    <button type="submit" id="submit-btn">Ajouter</button>
                </form>
            </div>
        </div>

        <!--- CREATORS FORM -->

        <div class="overlay-creator" style="display: none">
            <div class="popup-creator">
                <h2 id="popup-title">Ajouter un créateur</h2>
                <form id="creator-form">
                    <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="NOM Prénom"
                        required
                    />
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Email"
                        required
                    />
                    <input
                        type="text"
                        id="linkedin"
                        name="linkedin"
                        placeholder="Lien LinkedIn"
                    />
                    <input
                        type="file"
                        id="profile_picture"
                        name="profile_picture"
                        placeholder="Image URL"
                    />
                    <img
                        id="profile_picture_preview"
                        src=""
                        alt="Aperçu de l'image"
                    />
                    <button type="submit" id="submit-btn">Ajouter</button>
                </form>
            </div>
        </div>

        <!--- TAG FORM -->

        <div class="overlay-tag" style="display: none">
            <div class="popup-tag">
                <h2 id="popup-title">Ajouter un tag</h2>
                <form id="tag-form">
                    <input
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Nom du tag"
                        required
                    />
                    <textarea
                        id="description"
                        name="description"
                        placeholder="Description"
                        required
                    ></textarea>
                    <button type="submit" id="submit-btn">Ajouter</button>
                </form>
            </div>
        </div>

        <!---  POPUP DELETE  -->

        <div class="overlay-delete" style="display: none">
            <div class="popup-delete">
                <h1>Êtes-vous sûr de supprimer ?</h1>
                <div class="btn">
                    <button class="no">Non</button>
                    <button class="yes">Oui</button>
                </div>
            </div>
        </div>

        <script src="/js/adminScript/Etiquettes/AddEtiquettes.js"></script>
        <script src="/js/adminScript/Etiquettes/EditDeleteEtiquettes.js"></script>
        <script src="/js/adminScript/Etiquettes/ShowCreatorForm.js"></script>
        <script src="/js/adminScript/Etiquettes/ShowTagsForm.js"></script>
        <script src="/js/adminScript/Etiquettes/ShowInnovationForm.js"></script>

        <script src="/js/adminScript/Creator/AddCreators.js"></script>
        <script src="/js/adminScript/Creator/EditDeleteCreators.js"></script>

        <script src="/js/adminScript/Tag/AddTags.js"></script>
        <script src="/js/adminScript/Tag/EditDeleteTags.js"></script>

        <script src="/js/adminScript/Other/image-preview.js"></script>
    </body>
</html>
